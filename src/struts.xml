<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN" "http://struts.apache.org/dtds/struts-2.3.dtd"> 

<struts>  
	<constant name="struts.devMode" value="true"/>
	<package name="com.diworksdev.account.action" extends="struts-default">

<!-- HomeAction -->
		<action name="HomeAction" class="com.diworksdev.account.action.HomeAction" method="execute"> 
			<result name="success">home.jsp</result> 
		</action>	
		
<!-- registAction -->
		<action name="regist" class="com.diworksdev.account.action.registAction" method="execute">
			<result name="success">regist.jsp</result>
		</action>
		
<!-- regist_confirmAction -->
		<action name="regist_confirm" class="com.diworksdev.account.action.regist_confirmAction" method="execute">
			<result name="success">regist_confirm.jsp</result>
			<result name="error">regist.jsp</result>
			<result name="input">regist_confirm.jsp</result>
			<result name="back">regist.jsp</result> 
		</action>
		
<!-- regist_completeAction -->
		<action name="regist_Complete" class="com.diworksdev.account.action.regist_completeAction" method="execute">
			<result name="success">regist_complete.jsp</result>
			<result name="error">regist_confirm.jsp</result>
		</action>
		
<!-- ListAction -->
		<action name="list" class="com.diworksdev.account.action.ListAction" method="execute"> 
			<result name="success">list.jsp</result> 
		</action>	
		
<!-- DeleteAction -->
		<action name="delete" class="com.diworksdev.account.action.deleteAction" method="execute"> 
			<result name="success">delete.jsp</result> 
		</action>
		
<!-- Delete_confirmAction -->
		<action name="delete_confirm" class="com.diworksdev.account.action.delete_confirmAction" method="execute"> 
			<result name="success">delete_confirm.jsp</result> 
		</action>
		
<!-- Delete_completeAction -->
		<action name="delete_complete" class="com.diworksdev.account.action.delete_completeAction" method="execute"> 
			<result name="success">delete_confirm.jsp</result> 
		</action>
		
<!-- UpdateAction -->
		<action name="update" class="com.diworksdev.account.action.updateAction" method="execute"> 
			<result name="success">update.jsp</result> 
		</action>
		
<!-- Update_confirmAction -->
		<action name="update_confirm" class="com.diworksdev.account.action.update_confirmAction" method="execute"> 
			<result name="success">update_confirm.jsp</result> 
		</action>
		
<!-- Update_completeAction -->
		<action name="update_complete" class="com.diworksdev.account.action.update_completeAction" method="execute"> 
			<result name="success">update_complete.jsp</result> 
		</action>
		
	</package>
</struts> 